<% layout('layout/layout.main') %>
<h1>Thông tin tiêm chủng</h1>

<form class="immunization-form">
    <div style="margin-top: 36px;" >
        <label for="immunization-name">Tên thú cưng</label></br>
        <input class="immunization-input" type="text" name="" id="pet-name" value="<%= petInfo.name %>"  required></br>
    </div>
    <div>
        <label for="immunization-age">Ngày sinh</label></br>
        <input class="immunization-input" type="text" name="" id="immunization-age" value="<%= petInfo.birthDate %>" required></br>
    </div>
    <div>
        <label for="immunization-date">Ngày tiêm chủng</label></br>
        <input class="immunization-input" type="date" name="" id="immunization-date" required></br>
    </div>
    <div>
        <label for="immunization-medicine">Loại thuốc sử dụng</label></br>
        <input class="immunization-input" type="text" name="" id="immunization-medicine" p required></br>
    </div>

    <button id="submit-btn" type="button">Nhập dữ liệu</button>
</form>
<!-- Script -->
<script src="/public/js/form/immunization.js"></script>
