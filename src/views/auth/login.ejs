<% layout('layout/layout.auth') %>
<div id="login-page">
    <div class="login-img">
        <h1>Chào mừng bạn đến với...</h1>
        <img id="login-image" src="/public/assets/img/login.png" alt="">
    </div>
    <div class="login-content">
        <h2>Đăng nhập vào ...</h2>
        <p>Nhập thông tin chi tiết của bạn vào bên dưới</p>

        <div>
            <form class="login-form" action="/login" method="post">
                <input class="login-input" type="text" name="username" placeholder="Tên đăng nhập"></br>
                <input class="login-input" type="password" name="password" id="password"
                       placeholder="Mật khẩu"></br>
                <div id="def">
                    <div class="check-box">
                        <input type="checkbox" name="" id="checkbox">
                        <label for="checkbox">Ghi nhớ tôi</label>
                    </div>
                    <div id="forgot-password">
                        <a href="">Quên mật khẩu?</a>
                    </div>
                </div>
                <button class="login-summit" type="submit">Đăng nhập</button>
            </form>
        </div>
    </div>
</div>

